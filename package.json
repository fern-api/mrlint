{
  "name": "mrlint-root",
  "description": "A monorepo linter",
  "repository": "https://github.com/fern-api/mrlint",
  "author": "Birch Solutions, Inc.",
  "private": true,
  "workspaces": [
    "packages/**",
    "!packages/**/lib"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach --verbose --parallel run clean",
    "compile": "yarn workspaces foreach --verbose --parallel --topological run compile",
    "compile:all": "yarn workspaces foreach --verbose --parallel --topological run compile:all",
    "build": "yarn workspaces foreach --verbose --parallel --topological run build",
    "test": "yarn workspaces foreach --verbose --parallel --topological run test",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:eslint:fix": "eslint . --fix --max-warnings 0",
    "lint:monorepo": "yarn workspace mrlint run compile && node packages/cli/cli lint",
    "lint:monorepo:fix": "yarn run lint:monorepo --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ./shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ./shared/.prettierignore \"**\"",
    "depcheck": "yarn workspaces foreach --verbose --parallel run depcheck",
    "prepare": "husky install",
    "publish": "yarn workspaces foreach --no-private --parallel --verbose npm publish --access public"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mrlint": "^0.0.28",
    "prettier": "^2.6.2"
  },
  "packageManager": "yarn@3.2.0"
}
