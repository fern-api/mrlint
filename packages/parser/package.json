{
  "name": "@fern-api/mrlint-parser",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:fern-api/mrlint.git",
    "directory": "packages/parser"
  },
  "files": [
    "lib"
  ],
  "source": "src/index.ts",
  "module": "src/index.ts",
  "main": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "clean": "tsc --build --clean tsconfig.cjs.json && tsc --build --clean tsconfig.json",
    "compile": "yarn run compile:esm",
    "compile:all": "run-s compile:cjs compile:esm",
    "compile:cjs": "tsc --build tsconfig.cjs.json && echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
    "compile:esm": "tsc --build tsconfig.json && echo '{ \"type\": \"module\" }' > lib/esm/package.json",
    "test": "yarn run compile && jest --passWithNoTests",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore",
    "lint:eslint:fix": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "depcheck": "depcheck"
  },
  "dependencies": {
    "@fern-api/mrlint-commons": "workspace:*",
    "@fern-api/mrlint-rules": "workspace:*",
    "execa": "^5.1.1",
    "find-up": "^5.0.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.14.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.25",
    "depcheck": "^1.4.3",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "package-json-type": "^1.0.3",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  }
}
