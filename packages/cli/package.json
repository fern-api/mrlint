{
  "name": "mrlint",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:fern-api/mrlint.git",
    "directory": "packages/cli"
  },
  "files": [
    "lib",
    "dist"
  ],
  "type": "module",
  "source": "src/index.ts",
  "module": "src/index.ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "bin": "dist/bundle.cjs",
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "test": "yarn run compile && jest --passWithNoTests",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore",
    "lint:eslint:fix": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "depcheck": "depcheck",
    "dist": "env-cmd -f .env.cjs node --loader ts-node/esm $(yarn bin webpack)"
  },
  "dependencies": {
    "@fern-api/mrlint-add-package": "workspace:*",
    "@fern-api/mrlint-commons": "workspace:*",
    "@fern-api/mrlint-lint": "workspace:*",
    "@fern-api/mrlint-parser": "workspace:*",
    "chalk": "^4.1.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@types/yargs": "^17.0.10",
    "depcheck": "^1.4.3",
    "env-cmd": "toddbluhm/env-cmd",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "node-loader": "^2.0.0",
    "package-json-type": "^1.0.3",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
